<Window x:Class="notepad.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notepad"
        mc:Ignorable="d"
        Title="AboutWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image Source="/odisee.png" VerticalAlignment="Bottom"/>
        <Line  Stroke="Black" Width="600" StrokeThickness="10" Grid.Row="1" VerticalAlignment="Top" Fill="Black" OpacityMask="Black" Height="1" X2="600" Opacity="0.985"/>
        <Label Content="WPF Notepad 1.0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
        <Line  Stroke="Black" Width="600" StrokeThickness="10" Grid.Row="1" VerticalAlignment="Center" Fill="Black" OpacityMask="Black" Height="1" X2="600" Opacity="0.985"/>

    </Grid>
</Window>
