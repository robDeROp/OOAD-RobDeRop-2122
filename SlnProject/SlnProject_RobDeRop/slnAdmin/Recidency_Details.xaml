<Window x:Class="slnAdmin.Recidency_Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slnAdmin"
        mc:Ignorable="d"
        Title="Recidency_Details" Height="400" Width="400">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button x:Name="UploadPicture_R" Content="Upload Image" Grid.Row="0" Height="20" Width="250" VerticalAlignment="Top" Margin="0 4 0 0" Click="UploadPicture_R_Click"/>
            <Image x:Name="imageDisp" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="131"/>
            <ComboBox x:Name="SelectName_R" Grid.Row="0" Height="20" Width="250" VerticalAlignment="Top" Margin="0 30 0 0" SelectionChanged="SelectName_R_SelectionChanged"/>
        </Grid>
    </Grid>
</Window>
