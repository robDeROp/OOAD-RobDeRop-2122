<Window x:Class="gebruiker_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gebruiker_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="150px">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="UserName" FontSize="15px" Text="gebruikersnaam" Height="30px" Width="150" Grid.Row="0"/>
        <TextBox x:Name="Password" FontSize="15px" Text="wachtwoord" Height="30px" Width="150" Grid.Row="1"/>
        <Button x:Name="Submit" Content="Submit" Height="50px" Width="150px" Grid.Row="2" Click="Submit_Click"/>
    </Grid>
</Window>
